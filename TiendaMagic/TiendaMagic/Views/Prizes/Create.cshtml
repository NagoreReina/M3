@model TiendaMagic.Models.Prize

@{
    ViewData["Title"] = "Create";
}

<h1>Crear nuevo Premio</h1>
<hr />
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="col-md-6">
            <dl class="row">
                <dt class="col-sm-4">
                    Fecha de caducidad
                </dt>
                <dd class="col-sm-8">
                    <div class="form-group">
                        <input asp-for="DateOfExpiry" class="form-control" />
                        <span asp-validation-for="DateOfExpiry" class="text-danger"></span>
                    </div>
                </dd>
                <dt class="col-sm-4">
                    Titulo
                </dt>
                <dd class="col-sm-8">
                    <div class="form-group">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </dd>
                <dt class="col-sm-4">
                    Texto
                </dt>
                <dd class="col-sm-8">
                    <div class="form-group">
                        <textarea asp-for="Text" class="form-control"></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                </dd>
                <dt class="col-sm-4">
                    Imagen
                </dt>
                <dd class="col-sm-8">
                    <div class="form-group">
                        @*Esto sera de seleccionar una de las que aparezcan (7 porque actualmente tengo 7 imagenes)*@
                        @for(int i = 1; i<9; i++)
                        {
                            string value = i + ".png";
                        <img src="~/Img/@value" alt="Imagen Premio" class="prize-img" />
                        }
                        <input asp-for="Image" class="form-control" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                </dd>
                <dt class="col-sm-4">
                    Precio
                </dt>
                <dd class="col-sm-8">
                    <div class="form-group">
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </dd>
            </dl>
        <div class="form-group">
            <input type="submit" value="Crear" class="btn btn-primary" />
        </div>
    </div>
    </form>
</div>

<div>
    <a asp-action="Index">volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
