@using Microsoft.AspNetCore.Identity;
@inject SignInManager<AppUser> _signInManager;
@inject UserManager<AppUser> _userManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiendaMagic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap_Darkly.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-light border-bottom box-shadow mb-3">
            <div class="container">
                @if (_signInManager.IsSignedIn(User))
                {
                    AppUser user = await _userManager.GetUserAsync(User);
                    if (await _userManager.IsInRoleAsync(user, "Client"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="AppUserPrizes" asp-action="Index">TiendaMagic</a>
                    }
                    if (await _userManager.IsInRoleAsync(user, "Admin"))
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Queries" asp-action="Index">TiendaMagic</a>
                    }
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TiendaMagic</a>
                }

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    @if (_signInManager.IsSignedIn(User))
                    {
                        AppUser user = await _userManager.GetUserAsync(User);
                        if (await _userManager.IsInRoleAsync(user, "Admin"))
                        {

                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Usuarios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Prizes" asp-action="Index">Premios</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Queries" asp-action="Index">Consultas</a>
                                </li>
                            </ul>
                        }
                        else if (await _userManager.IsInRoleAsync(user, "Client"))
                        {
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Queries" asp-action="Create">Hacer una consulta</a>
                                </li>
                            </ul>
                        }
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - TiendaMagic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
