@model VideoClubOp.Models.User

@{
    ViewData["Title"] = "Details";
}

<h1>Mi perfil</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre:
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class = "col-sm-2">
            Apellido:
        </dt>
        <dd class = "col-sm-10">
            @Model.LastName
        </dd>
        <dt class = "col-sm-2">
            Email:
        </dt>
        <dd class = "col-sm-10">
            @Model.Email
        </dd>
        <dd class = "col-sm-10">
            <img src="@Model.ProfilePicture" alt="Imagen de perfil" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
