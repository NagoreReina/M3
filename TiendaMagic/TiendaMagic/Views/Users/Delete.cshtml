@model TiendaMagic.Models.AppUser
@{
    ViewData["Title"] = "Delete";
}
<div class="page-wrapper paddingLeft paddingRight">
    <h1>¿Estas seguro que quieres eliminar a @Model.Nick?</h1>
    <div>
        <h4>@Model.Name  @Model.LastName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                DCI
            </dt>
            <dd class="col-sm-10">
                @Model.Dci
            </dd>
            <dt class="col-sm-2">
                Telefono
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Puntos
            </dt>
            <dd class="col-sm-10">
                @Model.Points P
            </dd>
            <dt class="col-sm-2">
                Saldo
            </dt>
            <dd class="col-sm-10">
                @Model.Money €
            </dd>
        </dl>
    </div>
    <form asp-action="ConfirmDelete">
        <input type="hidden" asp-for="@Model.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
    </form>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Index">Volver</a>
    </div>
</div>

