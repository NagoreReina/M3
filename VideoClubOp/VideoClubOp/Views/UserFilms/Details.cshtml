@model VideoClubOp.Models.UserFilm

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>@Model.Film.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Fecha Alquiler:
        </dt>
        <dd class="col-sm-10">
            @Model.DateRental
        </dd>
    </dl>
    <div>

        <div class="row">
            <div class="card col-lg-4 col-md-6 col-sm-12" style="width: 18rem;">
                <img src="@Model.Film.Image" class="card-img-top" alt="@Model.Film.Title">
                <div>
                    <p class="card-text">@Model.Film.Sinopsis</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <p>Para confirmar Devolución pincha aquí</p>
                <a class="btn btn-primary" role="button" aria-expanded="false" asp-controller="UserFilms" asp-action="Return" asp-route-Id="@Model.Id">Devolver</a>
                <div>
                    <a asp-action="Index">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
