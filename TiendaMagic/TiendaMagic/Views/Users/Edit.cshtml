
@model TiendaMagic.Models.AppUser
@{
    ViewData["Title"] = "Edit";
}

<h1>Editar @Model.Nick</h1>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" id="profile-form">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <h5>Telefono</h5>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Nombre</h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>Apellido</h5>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5>DCI</h5>
                <input asp-for="Dci" class="form-control" />
                <span asp-validation-for="Dci" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.Nick" asp-for="Nick" />
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.Email" asp-for="Email" />
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.Image" asp-for="Image" />
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.Points" asp-for="Points" />
            </div>
            <div class="form-group">
                <input type="hidden" value="@Model.Money" asp-for="Money" />
            </div>
            <button type="submit" class="btn btn-success" id="update-profile-button">Save</button>
        </form>
    </div>
</div>
