@model IEnumerable<TiendaMagic.Models.Prize>

@{
    ViewData["Title"] = "Index";
}
    <div class="page-wrapper paddingRight paddingLeft">
        <h1>Premios</h1>
        <p>
            <a asp-action="Create">Crear Nuevo Premio</a>
        </p>
        <div class="table-responsive">
            <div class="row">
                <div class="col-sm-12">
                    <table id="zero_config" class="table table-striped table-bordered dataTable">
                        <thead>
                            <tr role="row">
                                <th>
                                    Imagen
                                </th>
                                <th>
                                    Titulo
                                </th>
                                <th>
                                    Texto
                                </th>
                                <th>
                                    Fecha de caducidad
                                </th>
                                <th>
                                    Precio
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Prize prize in Model)
                            {
                                <tr class="odd" role="row">
                                    <td>
                                        <img src="@prize.Image" alt="@prize.Title" class="prize-img" />
                                    </td>
                                    <td>
                                        @prize.Title
                                    </td>
                                    <td>
                                        @prize.Text
                                    </td>
                                    <td>

                                        @prize.DateOfExpiry.ToString("dd/MM/yyyy")
                                    </td>
                                    <td>
                                        @prize.Price
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@prize.Id">Editar</a> |
                                        <a asp-action="Delete" asp-route-id="@prize.Id">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
