@model TiendaMagic.Models.Prize

@{
    ViewData["Title"] = "Details";
}
<div class="page-wrapper paddingLeft paddingRight">
    <h1>Detalles de @Model.Title</h1>

    <div>
        <h4>Prize</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Titulo
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Texto
            </dt>
            <dd class="col-sm-10">
                @Model.Text
            </dd>
            <dt class="col-sm-2">
                Fecha de caducidad
            </dt>
            <dd class="col-sm-10">
                @Model.DateOfExpiry.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Imagen
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Image" alt="@Model.Title" />
            </dd>
            <dt class="col-sm-2">
                Precio
            </dt>
            <dd class="col-sm-10">
                @Model.Price
            </dd>
        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
        <a asp-action="Index">Lista de premios</a>
    </div>
</div>
