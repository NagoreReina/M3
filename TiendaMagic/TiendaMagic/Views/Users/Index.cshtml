@model IEnumerable<TiendaMagic.Models.AppUser>
@{
    ViewData["Title"] = "Index";
}

<h1>Usuarios</h1>
<a asp-action="Create">Crear Nuevo Usuario</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Nick
            </th>
            <th>
                Nombre
            </th>
            <th>
                Puntos
            </th>
            <th>
                Añadir/Restar Puntos
            </th>
            <th>
                Saldo
            </th>
            <th>
                Añadir/Restar Saldo
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser user in Model)
        {
        <tr>
            <td>
                <a asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">@user.Nick</a>
            </td>
            <td>
                @user.Name @user.LastName
            </td>
            <td>
                @user.Points P
            </td>
            <td>
                <form asp-action="ChangePoints" asp-route-id="@user.Id" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-xs-2">
                        <input type="number" class="form-control" name="points"/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Aplicar" class="btn btn-primary" />
                    </div>
                </form>
            </td>
            <td>
                @user.Money €
            </td>
            <td>
                <form asp-action="ChangeMoney" asp-route-id="@user.Id" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-xs-2">
                        <input type="text" name="money" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Aplicar" class="btn btn-primary" />
                    </div>
                </form>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@user.Id">Eliminar</a> |
                <a  asp-action="Details" asp-route-id="@user.Id">Ver</a>
            </td>
        </tr>
        }
    </tbody>
</table>

