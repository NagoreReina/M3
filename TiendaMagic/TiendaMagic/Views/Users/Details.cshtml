@model TiendaMagic.Models.AppUser
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Nick</h1>

<div>
    <h4>@Model.Name  @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            DCI
        </dt>
        <dd class="col-sm-10">
            @Model.Dci
        </dd>
        <dt class="col-sm-2">
            Telefono
        </dt>
        <dd class="col-sm-10">
            @Model.PhoneNumber
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Puntos
        </dt>
        <dd class="col-sm-10">
            @Model.Points P
        </dd>
        <dt class="col-sm-2">
            Añadir / Quitar puntos
        </dt>
        <dd class="col-sm-10">
            <form asp-action="ChangePoints" asp-route-id="@Model.Id" class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-xs-2">
                    <input type="number" class="form-control" name="points" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Aplicar" class="btn btn-primary" />
                </div>
            </form>
        </dd>
        <dt class="col-sm-2">
            Saldo
        </dt>
        <dd class="col-sm-10">
            @Model.Money €
        </dd>
        <dt class="col-sm-2">
            Añadir / Quitar saldo
        </dt>
        <dd class="col-sm-10">
            <form asp-action="ChangeMoney" asp-route-id="@Model.Id" class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group col-xs-2">
                    <input type="text" name="money" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Aplicar" class="btn btn-primary" />
                </div>
            </form>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>

